<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                </FrameLayout>
               <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:id="@+id/activity_user_detail_edit_firstname"
                    android:layout_weight="0.5"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Fist Name"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:id="@+id/activity_user_detail_edit_lastname"
                    android:layout_weight="0.5" android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Last Name"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"/>

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/activity_user_detail_edit_email"
                    android:layout_weight="0.5"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Email (example@gmail.com)"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:id="@+id/activity_user_detail_edit_submitBtb"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
