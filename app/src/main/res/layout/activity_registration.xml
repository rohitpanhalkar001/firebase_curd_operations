<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">



                </FrameLayout>


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="1">

                    <EditText
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:id="@+id/activity_register_firstname"
                        android:layout_weight="0.5"
                        android:paddingLeft="8dp"
                        android:textColor="@color/white"
                        android:hint="Fist Name"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:id="@+id/activity_register_lastname"
                        android:layout_weight="0.5" android:paddingLeft="8dp"
                        android:textColor="@color/white"
                        android:hint="Last Name"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/activity_register_email"
                    android:layout_weight="0.5"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Email (example@gmail.com)"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/activity_register_pwd"
                    android:layout_weight="0.5"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Password"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:hint="Confirm Password"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"/>


                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <Spinner
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/spinner"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp">
                    </Spinner>

                    <ImageView
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"/>

                </FrameLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gender"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>


                <RadioGroup
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:layout_height="55dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/radioButtonFemale"
                        android:text="Female"
                        android:checked="false"/>

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/radioButtonMale"
                        android:text="Male"
                        android:checked="false"/>

                </RadioGroup>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:id="@+id/activity_photo_submitBtb"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="10dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
